@page
@model FunnyWebRazor.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista kategorii</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Utwórz nową kategorię
            </a>
        </div>
    </div>
</div>



<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Nazwa kategorii</th>
        <th>Kolejność wyświetlania</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model.CategoryList.OrderBy(x => x.DisplayOrder))
    {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edycja
                    </a>
                    <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                        <i class="bi bi-trash-fill"></i> Usuń
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>

</table>
